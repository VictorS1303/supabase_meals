---
import Layout from '../layouts/Layout.astro'
import Navigation from '../components/Navigation.astro'
import MealCard from '../components/MealCard.astro'
import Section from '../components/Section.astro'

const links =
[
    {
        href: '/meals',
        text: 'Browse Meals'
    }
]

const mealCards =
[
    {
        mealImage: '/images/hero/home_hero_bg.jpg',
        alt: 'meal card image',
        mealTitle: 'Burger with fries',
        preparationTime: '30-40',
        id: 1,
    },
    {
        mealImage: '/images/hero/home_hero_bg.jpg',
        alt: 'meal card image',
        mealTitle: 'Burger with fries',
        preparationTime: '30-40',
        id: 2,
    },
    {
        mealImage: '/images/hero/home_hero_bg.jpg',
        alt: 'meal card image',
        mealTitle: 'Burger with fries',
        preparationTime: '30-40',
        id: 3,
    },
    {
        mealImage: '/images/hero/home_hero_bg.jpg',
        alt: 'meal card image',
        mealTitle: 'Burger with fries',
        preparationTime: '30-40',
        id: 4,
    },
    {
        mealImage: '/images/hero/home_hero_bg.jpg',
        alt: 'meal card image',
        mealTitle: 'Burger with fries',
        preparationTime: '30-40',
        id: 5,
    },
    {
        mealImage: '/images/hero/home_hero_bg.jpg',
        alt: 'meal card image',
        mealTitle: 'Burger with fries',
        preparationTime: '30-40',
        id: 6,
    },
]
---

<Layout>
    <Navigation {links} currentPage="/meals"/>

    <Section class="meal-cards flex justify-center items-center" id="meal_cards">
        <div class="container meal-cards-container grid grid-cols-3 gap-4 justify-items-center px-40">
            {
                mealCards.map((mealCard) => (
                    <a href={`/meals/${mealCard.id}`} key={mealCard.id}>
                        <MealCard
                            mealImage={mealCard.mealImage}
                            alt={mealCard.alt}
                            mealTitle={mealCard.mealTitle}
                            preparationTime={mealCard.preparationTime}
                        />
                    </a>
                ))
            }
        </div>
    </Section>
</Layout>